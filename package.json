{
  "name": "node-typescript-template",
  "version": "1.0.0",
  "description": "Typescript template for Node.js projects",
  "homepage": "https://github.com/mkrtchian/node-typescript-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkrtchian/node-typescript-template.git"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "Roman Mkrtchian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mkrtchian/node-typescript-template/issues"
  },
  "type": "module",
  "engines": {
    "node": ">= 18"
  },
  "scripts": {
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "eslint --fix --max-warnings=0 .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "22.9.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  },
  "lint-staged": {
    "src/**/*.{ts,json,md}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  }
}
